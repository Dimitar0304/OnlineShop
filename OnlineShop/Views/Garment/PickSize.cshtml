@using OnlineShop.Core.Services.Contracts;
@model GarmentSizeViewModel;
@inject IGarmentSizeService service;
@{
    ViewBag.Title = "Chose size";

}
<h1 class="text-black">@ViewBag.Title</h1>

<h3>Pick garment size!</h3>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="" asp-action="AddToCart" method="post"asp-route-garmentId="@Model.GarmentId">
            <div class="mb-3">
                <label asp-for="@Model.SizeId" class="form-label-add-edit">Select Brand</label>
                <select asp-for="@Model.SizeId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Brand...</option>
                    @foreach (var brand in Model.Sizes)
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.SizeId" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <input class="btn btn-outline-danger mb-2 w-100 p-3 fw-bold" type="submit" value="Add Garment to shop" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



