@model List<AccessoryAllViewModel>
@{
}
<head>
<title>@ViewBag.Title</title>
<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin: 10px;
        width: 300px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card img {
        width: 100%;
        height: auto;
        border-radius: 5px;
    }
</style>
</head>
<div class="container">
    @foreach (AccessoryAllViewModel s in Model)
    {
        


        <div style="width:min-content;height:min-content" class="card">
            <h3>@s.Name</h3>
            <p>@s.Price BGN</p>
            <img src="@s.ImageUrl">
            <p>@s.BrandName</p>

            <form class="input-group-sm" asp-controller="Accessory" asp-action="AddToCart" asp-route-id="@s.Id">
                <input type="submit" value="Add to Cart" class="fs-6 btn btn-success mb-2 w-100 p-3 fw-bold" width="60" />
            </form>

            @if (User.IsInRole("Admin"))
            {
                <form class="input-group-sm" asp-area="Admin"
                asp-controller="Accessory" asp-action="Edit" asp-route-id="@s.Id"
                asp-route-information="@s.GetInformation()">
                    <input type="submit" value="Edit" class="fs-6 btn btn-success mb-2 w-100 p-3 fw-bold" width="60" />
                </form>
                <form class="input-group-sm" asp-controller="Accessory" asp-action="Delete" asp-route-id="@s.Id">
                    <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-2 w-100 p-3 fw-bold" width="60" />
                </form>
            }
            <form class="input-group-sm" asp-controller="Accessory" asp-action="Details" asp-route-id="@s.Id"
            asp-route-information="@s.GetInformation()">
                <input type="submit" value="Details" class="fs-6 btn btn-muted mb-2 w-100 p-3 fw-bold " width="60" />
            </form>
        </div>
    }


</div>


