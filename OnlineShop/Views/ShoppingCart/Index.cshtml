@model ShoppingCart

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", new { name = item.Product.Name })" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @Model.GetTotal().ToString("C")</h3>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
