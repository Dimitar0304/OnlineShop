@model AllBrandsViewModel;
@{
    ViewBag.Title = "All distributed brands";
}
<head>
    <link rel="stylesheet" href="/css/AllBrands.css"
</head>
<h1 class="text-center text-black">@ViewBag.Title</h1>

@foreach (var br in Model.Brands)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@br.Name</h5>
            <br>
            <button asp-area="" asp-action="GetClothesForBrand" asp-controller="Brand"asp-route-brandId="@br.Id">Brand Collection</button>
        </div>
    </div>
}


<div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {

                <li class="page-item">
                    <a class="page-link" href="/Brand/AllBrands?currentPage =@Model.CurrentPage-1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {

                    <li xclass="page-item"><a class="page-link active" href="/Brand/AllBrands?currentPage=@i">@i</a></li>
                }
                else
                {
                    <li xclass="page-item"><a class="page-link " href="/Brand/AllBrands?currentPage=@i">@i</a></li>
                }
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {

                <li class="page-item">
                    <a class="page-link" href="/Brand/AllBrands?currentPage=@Model.CurrentPage+1" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }

        </ul>
    </nav>
</div>
